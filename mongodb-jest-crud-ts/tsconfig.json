{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "rootDirs": ["./src"],
      "outDir": "./dist",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "sourceMap": false,
      "lib": ["ES2021.String"]
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"],
    "ts-node": {
      "transpileOnly": true,
      "compilerOptions": {
        "module": "commonjs"
      }
    }
  }
  